<div class="container">
  <h1><%= @list.name %></h1>
  <ul>
    <% @list.movies.each do |movie| %>
      <li><%= movie.title %>
      <%= link_to "Delete movie from list", list_bookmark_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>
  <h4>Add a movie in this list</h4>
    <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <%#= f.input :list_id, as: :hidden, input_html: {value: @list.id} %>
    <%= f.submit %>
  <% end %>
</div>
